# OPTION 2 - USING OH MY ZSH - ENABLED
if [[ ! -f ~/install.sh ]];then
   cd $HOME/
   echo "downloading oh-my-zsh ....."
   wget https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh
   sh install.sh
fi 

plugins=(
  git
  dotenv
  macos
)

# ALIASES
source ~/.dotfiles/aliases

