# Dsiplay nice System Info every time zsh startup
if ! [ -x "$(command -v macchina)" ]; then
    echo "Installing macchina ..."
    HOMEBREW_NO_AUTO_UPDATE=1 brew install macchina
fi

# DISABLE UPDATING BREW WHEN INSTALL APP
HOMEBREW_NO_AUTO_UPDATE=1

# DISABLE COMPAUDIT WARNING ON CATALINA
ZSH_DISABLE_COMPFIX=true

